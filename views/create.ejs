<h2>Add Recipe</h2>
<form action="/create" method="POST" class="form-horizontal" id="addRecipe">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Recipe Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" placeholder="e.g. Exasperated Chocolate Chip Cookies" required>
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" name="description"  placeholder="e.g. The best exasperated chocolate chip cookies this side of the Mississippi" required>
    </div>
  </div>
  <div class="form-group">
    <label for="minutes" class="col-sm-2 control-label">Preparation Time</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="minutes" name="minutes" placeholder="e.g. 30 minutes" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
