<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Student</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="student_id">SELECT AN STUDENT TO UPDATE</label><br/>
    <select id="student_id" name="student_id">
    <% if(typeof students != "undefined" && students.length > 0){ %>
      <% students.forEach(function(student){ %>
        <option value="<%= student.student_id %>">
          <%= student.last_name + ", " +  student.first_name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Recipe</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateStudentForm">
  <input type="hidden" name="student_id" id="student_id" value="">
  
  <div class="form-group">
      <label for="title" class="col-sm-2 control-label">Recipe Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" name="title" placeholder="e.g. Exasperated Chocolate Chip Cookies" required>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="description" name="description"  placeholder="e.g. The best exasperated chocolate chip cookies this side of the Mississippi" required>
      </div>
    </div>
    <div class="form-group">
      <label for="minutes" class="col-sm-2 control-label">Preparation Time</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="minutes" name="minutes" placeholder="e.g. 30 minutes" required>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Recipe</button>
    </div>
  </div>
</form>
